		<header class="header_section">
			<div class="container">
				<nav class="navbar navbar-expand-lg custom_nav-container" style="background-color: rgba(94, 16, 130, 255); padding: 5px 10px;">
					<a class="navbar-brand" href="index.html">
						<span>
							Easy Peasy
						</span>
					</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
							aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<div class="d-flex flex-column flex-lg-row align-items-center">
							<ul class="navbar-nav ml-auto">
								<li class="nav-item active">
									<a class="nav-link font-weight-bold" href="/Index"> Home <span class="sr-only">(current)</span></a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-white font-weight-bold" href="/Sign">Sign In</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-white font-weight-bold" href="/ParentDashboard">Parent</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-white font-weight-bold" href="/Admin">Admin</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-white font-weight-bold" href="/About">Contact us</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-white font-weight-bold" href="/Student">Student</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-white font-weight-bold" href="/Teacher">Teacher</a>
								</li>



								
							</ul>
						</div>
					</div>


				</nav>
			</div>
		</header>
		<!-- end header section -->
	</div>

	<div class="container" style="padding: 20px; margin-bottom: 20px;">
		@RenderBody()
	</div>

	<section class="container-fluid footer_section" style="background-color: rgba(94, 16, 130, 255); color: white; padding: 10px; margin-top: 20px;">
		<p>
			Easy Peasy
		</p>
	</section>

	<script type="text/javascript" src="~/js/jquery-3.4.1.min.js"></script>
	<script type="text/javascript" src="~/js/bootstrap.js"></script>

	<script type="module" src="~/lib/chartjs/chart.umd.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
